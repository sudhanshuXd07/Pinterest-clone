<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/profile.css">
</head>

<body>
  <div class="containerpers">

    <div class="cardpers">

      <form action="/uploadProfilePic" method="POST" enctype="multipart/form-data" id="profilePicForm">
  <label for="profileInput" class="profile-picture" style="cursor: pointer;">
    <% if (user.profileImage) { %>
      <img src="/images/uploads/<%= user.profileImage %>" alt="Profile Picture">
    <% } else { %>
      <img src="/images/default.png" alt="Default Profile Picture">
    <% } %>
  </label>
  <input type="file" name="profilePic" id="profileInput" style="display: none;" onchange="document.getElementById('profilePicForm').submit();">
</form>
      <h2 class="name">
        <%=user.fullname %>
      </h2>
      <h3 class="username">@<%=user.username%>
      </h3>
      <p class="tagline">heyyy</p>
      <p class="description">helloo</p>
      <a href="/logout" class="button">Logout</a>
      
      <form action="/upload" method="post" enctype="multipart/form-data"
        class="d-flex justify-content-center gap-2 flex-wrap mt-3">
        <input type="text" name="filecaption" placeholder="Caption" class="form-control w-auto">
        <input type="file" name="file" class="form-control w-auto">
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
  <div class="container">
    <div class="cards-container">
      <% user.posts.forEach(function (post) { %>
        <div class="post-card">
          <img src="/images/uploads/<%= post.image %>" alt="post" />

          <div class="card-body">
            <h5 class="card-title">
              <%=post.imageText%>
            </h5>
          </div>
        </div>
        <%})%>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
    crossorigin="anonymous"></script>
</body>

</html>